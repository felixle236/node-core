@Index(({camelName}: {PascalName}Entity) => [{camelName}.name, {camelName}.deletedAt], { unique: true })
export class {PascalName}Entity implements I{PascalName} {
    @PrimaryGeneratedColumn({ name: {PascalName}Schema.COLUMNS.ID })
