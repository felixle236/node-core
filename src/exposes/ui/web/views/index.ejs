<%- include('layout/header') %>

<link rel='stylesheet' href='/stylesheets/login.css' />

<h2><%= title %></h2>
<p>Welcome to <%= title %></p>

<% if (!userAuth) { %>
<a href="#myModal" class="btn btn-primary btn-sm" data-toggle="modal">Sign In</a>
<% } else { %>
<a class="btn btn-link" href="/users">User List</a><br />
<a class="btn btn-primary btn-sm" href="javascript:logout()">Sign Out</a>
<% } %>

<div id="myModal" class="modal fade">
	<div class="modal-dialog modal-login">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title">Sign In</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<div class="modal-body">
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control" id="email" name="email" placeholder="Email" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password" />
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block btn-lg" onclick="login()">Sign In</button>
                </div>
                <p id="login-error"></p>
			</div>
		</div>
	</div>
</div>

<script src="/javascripts/login.js"></script>

<%- include('layout/footer') %>